<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Title"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSessionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter session title"
        android:inputType="text"/>

    <!-- Date Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Date"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSessionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date (e.g., 2024-11-25 14:00)"
        android:inputType="datetime"/>

    <!-- Description Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Description"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSessionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter session description"
        android:inputType="textMultiLine"
        android:lines="3"/>

    <!-- Meeting Link Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meeting Link"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etMeetingLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meeting link"
        android:inputType="textUri"/>
</LinearLayout>
